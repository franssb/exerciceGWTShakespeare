<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"	
    xmlns:m="urn:import:gwt.material.design.client.ui"
    xmlns:fs="urn:import:be.steformations.fs.client.ui.widget">
	

	
	
<m:MaterialRow >
	<m:MaterialColumn grid="s6" offset="s3" >
	
		<m:MaterialRow>	<!-- inputs -->		
				
			<m:MaterialColumn grid="s4">
				<fs:PlayInput placeholder="Pièce" ui:field="playInput"/>
			</m:MaterialColumn>		
				
			<m:MaterialColumn grid="s4">
				<fs:SpeakerInput label="Personnage" ui:field="speakerInput"/>
			</m:MaterialColumn>			
			
			<m:MaterialColumn grid="s4">
				<fs:StartInput label="Début" ui:field="startInput"/>
			</m:MaterialColumn>		
				
		</m:MaterialRow>
		
		<m:MaterialRow>	<!-- buttons -->	
			
			<m:MaterialColumn grid="s2" offset="s3">
				<fs:SearchButton text="Chercher" ui:field="searchButton"/>
			</m:MaterialColumn>		
				
			<m:MaterialColumn grid="s2" offset="s1">
				<fs:ResetButton text="Réinitialiser" />
			</m:MaterialColumn>	
					
		</m:MaterialRow>
		
		<m:MaterialRow>	<!--outputs -->		
			<m:MaterialColumn>
				<fs:Output/>
			</m:MaterialColumn>			
		</m:MaterialRow>
	
	
	</m:MaterialColumn>
</m:MaterialRow>
</ui:UiBinder> 